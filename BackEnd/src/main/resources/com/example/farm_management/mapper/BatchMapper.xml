<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.farm_management.mapper.BatchMapper">
    <select id="list" resultType="com.example.farm_management.pojo.Batch">
        select *
        from batch
        <where>
            <if test="bid != null and bid != ''">
                b_id = #{bid}
            </if>
            <if test="bdate != null and bdate != ''">
                and b_date = #{bdate}
            </if>
            <if test="originid != null and originid != ''">
                and origin_id = #{originid}
            </if>
            <if test="gid != null and gid != ''">
                and g_id = #{gid}
            </if>
            <if test="gname != null and gname != ''">
                and g_name like concat('%', #{gname}, '%')
            </if>
            <if test="isdealed != null and isdealed != ''">
                and is_dealed = #{isdealed}
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
        </where>
    </select>

    <delete id="delete">
        delete
        from batch
        where batch.b_id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update">
        update batch
        <set>
            <if test="bdate != null">
                b_date = #{bdate},
            </if>
            <if test="originid != null and originid != ''">
                origin_id = #{originid},
            </if>
            <if test="gid != null and gid != ''">
                g_id = #{gid},
            </if>
            <if test="gname != null and gname != ''">
                g_name = #{gname},
            </if>
            <if test="isdealed != null and isdealed != ''">
                is_dealed = #{isdealed},
            </if>
            <if test="amount != null and amount != ''">
                amount = #{amount}
            </if>
        </set>
        where b_id = #{bid}
    </update>
</mapper>